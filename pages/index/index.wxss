.shade{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  background:rgba(0,0,0,.3);
  top: 0;
  left: 0;
}
.ranking{
  width: 600rpx;
  height: 800rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
  z-index: 2000;
  background:#fff;
  border-radius: 20rpx;
  overflow: hidden;

}
.ranking .rankingCenter{
position: relative;
width: 600rpx;
height: 800rpx;
border-radius: 20rpx;
overflow: hidden;
}
.ranking .rankingCenter .rankingTitle{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 2100;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  font-weight: bold;
}
.ranking .rankingCenter .rankingList{
  padding-top: 100rpx;
  padding-bottom: 100rpx;

  height: 600rpx;
}
.ranking .rankingCenter .rankingList .rankingItem{
  display: flex;
  margin: 20rpx 0;
}
.ranking .rankingCenter .rankingList .rankingItem .num{
  line-height: 80rpx;
  width: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
.ranking .rankingCenter .rankingList .rankingItem .rankingImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.ranking .rankingCenter .rankingList .rankingItem .rankingName{
  width: 230rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
}
.ranking .rankingCenter .rankingList .rankingItem .rankingText{
  line-height: 80rpx;
  font-size: 28rpx;
}
.rankingFooter{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 2100;
}
.rankingFooter .rankingBtn{
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 300rpx;
  text-align: center;
  z-index: 10;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  border-radius: 30rpx;
  animation: pulse infinite 1.5s;
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
}