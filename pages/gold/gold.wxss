/* pages/gold/gold.wxss */
page {
  background-image: linear-gradient(to top, #f3e7e9 0%, #e3eeff 99%, #e3eeff 100%);

  position: relative;
}

.gold {
  text-align: center;
  color: #E6A23C;
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.video {
  display: flex;
  width: 650rpx;
  margin: 0 auto;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.animation{
  animation: pulse infinite 1.5s;

}
.video .videoImg {
  width: 130rpx;
  height: 130rpx;
  margin: 10rpx;
  margin-left: 5rpx;
}

.videoText {
  /* width:180rpx; */
  margin-left: 20rpx;
  line-height: 150rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}
.bottom{
  margin: 0 auto;
  width: 100%;
  height: 546rpx;
  overflow: hidden;
  /* border-radius: 20rpx; */
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}