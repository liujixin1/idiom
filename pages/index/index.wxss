/* pages/index/index.wxss */
page {
  background-image: linear-gradient(to top, #f3e7e9 0%, #e3eeff 99%, #e3eeff 100%);

  position: relative;
}
.titleImg{
  width: 600rpx;
  height: 230rpx;
  display: block;
  margin-left: 75rpx;
  margin-top: 100rpx;
  /* animation: pulse infinite 1.5s; */
}
/* banner轮播图  */
.swiper_container{
  position: fixed;
  z-index: 400;
  width: 250rpx;
  background: rgba(0,0,0,.6);
  height: 60rpx;
  top: 20rpx;
  left: 20rpx;
  border-radius: 30rpx;
  overflow: hidden
}
.swiper-item{
  display: flex;
}
swiper-item .swiperImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
swiper-item .swiperText{
  font-size: 22rpx;
  line-height: 60rpx;
  color: #fff;
  margin-left: 10rpx;
  font-weight: bold;
}
.center{
  margin: 0 auto;
  background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);
  padding: 20rpx;
  border-radius: 30rpx;  
  margin-top: 50rpx;
  display: flex;
  width: 600rpx;
  padding-top: 30rpx;

}
.userinfo {
 width: 350rpx;
}
.btn{
   font-size: 35rpx;
  font-weight: bold;
  display: block;
  color: #fff;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 20rpx;
}
.headPortrait{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius:50%;
  display: block;
  /* border: 2rpx solid #ff8080; */
  margin: 0 auto;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
}

.userinfo-nickname {
  font-size: 35rpx;
  font-weight: bold;
  display: block;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 30rpx;
}
.list .item{
  display: flex;
  height: 80rpx;
}
.list .item .iconfont{
  font-size: 40rpx;
  line-height: 80rpx;
}
.list .item .icon-gold{
  color: #E6A23C;
}
.list .item .icon-glory{
  color: #F56C6C;
}
.list .item .icon-topic{
  color: #409EFF;
}
.list .item .itemText{
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
.toBtn{
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 500rpx;
  text-align: center;
  z-index: 10;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  border-radius: 45rpx;
  animation: pulse infinite 1.5s;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
}
.footer{
  display: flex;
  justify-content: space-around;
  margin-top: 100rpx;
}
.footer .footerItem .iconfont{
  font-size: 60rpx;
  text-align: center;
  color: #fff;
}
.footer .footerItem .itemText{
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  margin-top: 10rpx;
  font-weight: bold;
}
.footer .footerItem:nth-child(1) .iconfont{
  color:#E6A23C;
}
.footer .footerItem:nth-child(1) .itemText{
  color:#E6A23C;
}
.footer .footerItem:nth-child(2) .iconfont{
  color:#F56C6C;
}
.footer .footerItem:nth-child(2) .itemText{
  color:#F56C6C;
}
.footer .footerItem:nth-child(3) .iconfont{
  color:#409EFF;
}
.footer .footerItem:nth-child(3) .itemText{
  color:#409EFF;
}
.footer .footerItem:nth-child(4) .iconfont{
  color:#67C23A;
}
.footer .footerItem:nth-child(4) .itemText{
  color:#67C23A;
}