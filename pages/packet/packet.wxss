/* pages/packet/packet.wxss */
.packetList .packetItem{
  margin: 0 auto;
  width: 700rpx;
  overflow: hidden;

  border-radius: 20rpx;
  background-image: linear-gradient(-60deg, #ff5858 0%, #f09819 100%);
}
.packetList .packetItem {
  display: flex;
}
.packetList .packetItem .packetImg{
  width: 150rpx;
  height: 200rpx;
  margin-right: 40rpx;
}
.packetList .packetItem .packetItemCenter .packetName{
  color: #fff;
  margin-top: 15rpx;
  font-weight: bold;
  font-size: 35rpx;
}
.packetList .packetItem .packetItemCenter .packetSum{
  color: #fff;
  margin-top: 15rpx;
  font-weight: bold;
  font-size: 28rpx;
}
.packetList .packetItem .border{
  width: 500rpx;
  height: 1rpx;
  background: rgba(255,255,255,.5);
  margin: 0 auto;
}
.footer{
  display: flex;
  width: 440rpx;
}
.toBtn{
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  width: 200rpx;
  text-align: center;
  z-index: 10;
  margin-top: 10rpx;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  border-radius: 25rpx;
  animation: pulse infinite 1.5s;
  color: #fff;
  font-weight: bold;
  font-size: 24rpx;
  margin-left: auto;
}
